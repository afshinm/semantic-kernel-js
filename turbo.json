{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test": {
        "dependsOn": ["^build", "build"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      }
    }
  }
